# .env.template

# Source Custom Vision Environment
# The source Custom Vision resource to export from
SOURCE_ENDPOINT="https://your-source-region.cognitiveservices.azure.com/"
SOURCE_TRAINING_KEY="your-source-training-key-here"
SOURCE_PROJECT_ID="your-source-project-id-here"

# Target Custom Vision Environment (Test)
# Uncomment and configure for test environment
# TARGET_ENDPOINT="https://your-test-region.cognitiveservices.azure.com/"
# TARGET_TRAINING_KEY="your-test-training-key-here"

# Target Custom Vision Environment (Production)
# The target Custom Vision resource to import to
TARGET_ENDPOINT="https://your-target-region.cognitiveservices.azure.com/"
TARGET_TRAINING_KEY="your-target-training-key-here"

# Custom Vision Prediction Configuration (Test)
# For testing your deployed model via REST API
CUSTOM_VISION_PREDICTION_URL=https://your-test-prediction-endpoint.cognitiveservices.azure.com/customvision/v3.0/Prediction/your-project-id/classify/iterations/your-iteration-name/url
CUSTOM_VISION_PREDICTION_KEY=your-test-prediction-key-here

# Custom Vision Prediction Configuration (Production)
# For production model predictions via REST API
CUSTOM_VISION_PREDICTION_URL=https://your-prod-prediction-endpoint.cognitiveservices.azure.com/customvision/v3.0/Prediction/your-project-id/classify/iterations/your-iteration-name/url
CUSTOM_VISION_PREDICTION_KEY=your-prod-prediction-key-here

# Project Configuration
# Name for the imported project
PROJECT_NAME="Your-Project-Name"

# Local Development Configuration
# For local Azure Functions development
BASE_URL=http://localhost:8082
